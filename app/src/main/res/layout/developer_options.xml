<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/developer_options_background">
        <LinearLayout
                android:id="@+id/versionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

            <org.mozilla.vrbrowser.ui.UIButton
                    android:id="@+id/backButton"
                    style="?attr/navigationBarButtonStyle"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:layout_marginBottom="10dp"
                    android:tint="@color/midnight"
                    android:src="@drawable/ic_icon_back"/>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?attr/scrollbarStyle">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginRight="20dp">
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developer_options_remote_debugging"
                                android:textSize="14sp"
                                android:textColor="@color/fog"
                                android:layout_alignParentStart="true"/>
                        <Switch
                                android:id="@+id/developer_options_remote_debugging_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:switchMinWidth="0dp"
                                android:textOff=""
                                android:textOn=""
                                android:track="@drawable/switch_track"
                                android:thumb="@drawable/switch_thumb"
                                android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developer_options_show_console"
                                android:textSize="14sp"
                                android:textColor="@color/fog"
                                android:layout_alignParentStart="true"/>
                        <Switch
                                android:id="@+id/developer_options_show_console_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:switchMinWidth="0dp"
                                android:textOff=""
                                android:textOn=""
                                android:track="@drawable/switch_track"
                                android:thumb="@drawable/switch_thumb"
                                android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developer_options_env_override"
                                android:textSize="14sp"
                                android:textColor="@color/fog"
                                android:layout_alignParentStart="true"/>
                        <Switch
                                android:id="@+id/developer_options_env_override_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:switchMinWidth="0dp"
                                android:textOff=""
                                android:textOn=""
                                android:track="@drawable/switch_track"
                                android:thumb="@drawable/switch_thumb"
                                android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developer_options_desktop_version"
                                android:textSize="14sp"
                                android:textColor="@color/fog"
                                android:layout_alignParentStart="true"/>
                        <Switch
                                android:id="@+id/developer_options_desktop_version_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:switchMinWidth="0dp"
                                android:textOff=""
                                android:textOn=""
                                android:track="@drawable/switch_track"
                                android:thumb="@drawable/switch_thumb"
                                android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/developer_options_events"
                                android:textSize="14sp"
                                android:textColor="@color/fog"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"/>
                        <RadioGroup
                                android:id="@+id/radioEvents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true">
                            <RadioButton android:id="@+id/radioMouse"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:background="@android:color/transparent"
                                         android:button="@drawable/radio"
                                         android:text="@string/developer_options_mouse"
                                         android:paddingLeft="10dp"
                                         android:paddingRight="10dp"/>
                            <RadioButton android:id="@+id/radioTouch"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:background="@android:color/transparent"
                                         android:button="@drawable/radio"
                                         android:text="@string/developer_options_touch"
                                         android:paddingLeft="10dp"
                                         android:checked="true"/>
                        </RadioGroup>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_centerVertical="true"
                                      android:gravity="center_vertical"
                                      android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_display_density"
                                    android:textSize="14sp"
                                    android:textColor="@color/fog"/>
                            <TextView
                                    android:id="@+id/densityText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/developer_options_display_density_default"
                                    android:textSize="20sp"
                                    android:textColor="@color/sky"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                            <org.mozilla.vrbrowser.ui.DeveloperOptionsEditText
                                    android:id="@+id/densityEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_display_density_default"
                                    android:visibility="gone"
                                    android:maxLength="1"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/densityEditButton"
                                style="?attr/developerOptionsEditButtonStyle"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_centerVertical="true"
                                      android:gravity="center_vertical"
                                      android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_window_size"
                                    android:textSize="14sp"
                                    android:textColor="@color/fog"/>
                            <TextView
                                    android:id="@+id/windowSizeWidthText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_window_size_width_default_value"
                                    android:textSize="20sp"
                                    android:textColor="@color/sky"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                            <org.mozilla.vrbrowser.ui.DeveloperOptionsEditText
                                    android:id="@+id/windowSizeWidthEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_window_size_width_default_value"
                                    android:visibility="gone"
                                    android:maxLength="4"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_window_size_by"
                                    android:textSize="14sp"
                                    android:textColor="@color/fog"/>
                            <TextView
                                    android:id="@+id/windowSizeHeightText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/developer_options_window_size_height_default_value"
                                    android:textSize="20sp"
                                    android:textColor="@color/sky"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                            <org.mozilla.vrbrowser.ui.DeveloperOptionsEditText
                                    android:id="@+id/windowSizeHeightEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/developer_options_window_size_height_default_value"
                                    android:visibility="gone"
                                    android:maxLength="4"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/windowSizeEditButton"
                                style="?attr/developerOptionsEditButtonStyle"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_centerVertical="true"
                                      android:gravity="center_vertical"
                                      android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_display_dpi"
                                    android:textSize="14sp"
                                    android:textColor="@color/fog"/>
                            <TextView
                                    android:id="@+id/dpiText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/developer_options_display_dpi_default"
                                    android:textSize="20sp"
                                    android:textColor="@color/sky"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                            <org.mozilla.vrbrowser.ui.DeveloperOptionsEditText
                                    android:id="@+id/dpiEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_display_dpi_default"
                                    android:visibility="gone"
                                    android:maxLength="2"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/dpiEditButton"
                                style="?attr/developerOptionsEditButtonStyle"/>
                    </RelativeLayout>
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/fog"/>
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_vertical">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:layout_centerVertical="true"
                                      android:gravity="center_vertical"
                                      android:orientation="horizontal">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_max_window_size"
                                    android:textSize="14sp"
                                    android:textColor="@color/fog"/>
                            <TextView
                                    android:id="@+id/maxWindowSizeWidthText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_max_window_size_width_default_value"
                                    android:textSize="20sp"
                                    android:textColor="@color/sky"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                            <org.mozilla.vrbrowser.ui.DeveloperOptionsEditText
                                    android:id="@+id/maxWindowSizeWidthEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_max_window_size_width_default_value"
                                    android:visibility="gone"
                                    android:maxLength="4"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="@string/developer_options_window_size_by"
                                    android:textSize="14sp"
                                    android:textColor="@color/fog"/>
                            <TextView
                                    android:id="@+id/maxWindowSizeHeightText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/developer_options_max_window_size_height_default_value"
                                    android:textSize="20sp"
                                    android:textColor="@color/sky"
                                    android:textStyle="bold"
                                    android:visibility="visible"/>
                            <org.mozilla.vrbrowser.ui.DeveloperOptionsEditText
                                    android:id="@+id/maxWindowSizeHeightEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/developer_options_max_window_size_height_default_value"
                                    android:visibility="gone"
                                    android:maxLength="4"/>
                        </LinearLayout>
                        <TextView
                                android:id="@+id/maxWindowSizeEditButton"
                                style="?attr/developerOptionsEditButtonStyle"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</merge>